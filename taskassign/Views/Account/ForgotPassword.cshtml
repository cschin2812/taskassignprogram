@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <h2>Forgot Password</h2>
        <p class="text-muted">Enter your username or email. We'll send an OTP to your registered email.</p>
        <form asp-action="ForgotPassword" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Identifier" class="form-label"></label>
                <input asp-for="Identifier" class="form-control" />
                <span asp-validation-for="Identifier" class="text-danger"></span>
            </div>
            <button class="btn btn-primary" type="submit">Send OTP</button>
            <a asp-action="Login" class="btn btn-link">Back to Login</a>
        </form>
    </div>
</div>
