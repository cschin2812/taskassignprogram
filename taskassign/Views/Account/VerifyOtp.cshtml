@model VerifyOtpViewModel
@{
    ViewData["Title"] = "Verify OTP";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <h2>Verify OTP</h2>
        @if (TempData["OtpInfo"] is string info)
        {
            <div class="alert alert-info">@info</div>
        }
        <form asp-action="VerifyOtp" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="UserId" type="hidden" />

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" readonly />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Otp" class="form-label"></label>
                <input asp-for="Otp" class="form-control" maxlength="6" />
                <span asp-validation-for="Otp" class="text-danger"></span>
            </div>

            <button class="btn btn-primary" type="submit">Verify</button>
            <a class="btn btn-link" asp-action="Register">Back to Sign Up</a>
        </form>
    </div>
</div>
