<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskAssign</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">
        <a class="navbar-brand" asp-controller="Task" asp-action="Dashboard">TaskAssign</a>
        <partial name="_GroupSwitcher" />
        <div class="navbar-nav ms-auto">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a class="nav-link" asp-controller="Task" asp-action="Dashboard">Dashboard</a>
                <a class="nav-link" asp-controller="Task" asp-action="Index">Tasks</a>
                <a class="nav-link" asp-controller="Group" asp-action="Index">Groups</a>
                <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout (@User.FindFirst("DisplayName")?.Value)</a>
            }
            else
            {
                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                <a class="nav-link" asp-controller="Account" asp-action="Register">Sign Up</a>
            }
        </div>
    </div>
</nav>
<div class="container">
    @RenderBody()
</div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>
